<% layout('./layouts/boilerplate') -%>
<body>
    <%- include('../partials/sidebar') %>
    <% if(success && success.length) { %>
        <%- include('../partials/success') %>
    <% } else if (error && error.length) { %>
        <%- include('../partials/error') %>
    <% } %>

    <div class="main-content">
        <h1>Admin Home</h1>
        <p><a href="">Surveys</a></p>
        <p><a href="/app/accountAdmin/surveyInstances">Survey Instances</a></p>
        <p><a href="#" id="openChangePasswordModal">Change Password</a></p>
        <p><a href="">Engagement Metrics</a></p>

        <h2>Summary</h2>
        <h3>Survey Instances</h3>
    </div>

    <!-- Change Password Modal -->
    <div id="changePasswordModal" class="modal">
        <div class="modal-content">
            <span class="close" id="closeModal">&times;</span>
            <h2>Change Password</h2>
            <form id="changePasswordForm">
                <div class="form-group">
                    <label for="oldPassword">Old Password:</label>
                    <input type="password" id="oldPassword" name="oldPassword" required>
                </div>

                <div class="form-group">
                    <label for="newPassword">New Password:</label>
                    <input type="password" id="newPassword" name="newPassword" required>
                </div>

                <div class="form-group">
                    <label for="confirmNewPassword">Confirm New Password:</label>
                    <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>
                </div>

                <button type="submit" class="btn">Change Password</button>
            </form>
            <p id="passwordMessage"></p>
        </div>
    </div>

    <script>
        // Open modal when "Change Password" is clicked
        document.getElementById("openChangePasswordModal").addEventListener("click", function(event) {
            event.preventDefault();
            document.getElementById("changePasswordModal").style.display = "flex";
        });

        // Close modal when clicking the close button
        document.getElementById("closeModal").addEventListener("click", function() {
            document.getElementById("changePasswordModal").style.display = "none";
        });

        // Handle form submission
        document.getElementById("changePasswordForm").addEventListener("submit", async function(event) {
            event.preventDefault();

            const oldPassword = document.getElementById("oldPassword").value;
            const newPassword = document.getElementById("newPassword").value;
            const confirmNewPassword = document.getElementById("confirmNewPassword").value;

            if (newPassword !== confirmNewPassword) {
                document.getElementById("passwordMessage").innerText = "New passwords do not match!";
                return;
            }

            try {
                const response = await fetch("/app/accountAdmin/changePassword", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ oldPassword, newPassword })
                });

                const data = await response.json();
                document.getElementById("passwordMessage").innerText = data.message;

                if (response.ok) {
                    setTimeout(() => {
                        window.location.href = "/app/survey/login";
                    }, 2000);
                }
            } catch (error) {
                console.error("Error:", error);
                document.getElementById("passwordMessage").innerText = "An error occurred. Please try again.";
            }
        });

        // Close modal when clicking outside the modal content
        window.onclick = function(event) {
            const modal = document.getElementById("changePasswordModal");
            if (event.target === modal) {
                modal.style.display = "none";
            }
        };
    </script>   

    <style>
        /* Modal Background */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        /* Modal Content */
        .modal-content {
            background-color: #fff;
            padding: 25px;
            border-radius: 10px;
            width: 400px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
            animation: fadeIn 0.3s ease-in-out;
        }

        /* Close Button */
        .close {
            float: right;
            font-size: 24px;
            cursor: pointer;
        }

        /* Form Styling */
        .form-group {
            margin: 15px 0;
            text-align: left;
        }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        /* Submit Button */
        .btn {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        /* Fade In Animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</body>